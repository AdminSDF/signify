
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      // Checks if the requesting user's UID matches the given userId.
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Checks if the requesting user's document has the `isAdmin` flag set to true.
      // exists() check is crucial to prevent errors if the user doc doesn't exist.
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Collection-Specific Rules ---

    // Rules for user profiles
    match /users/{userId} {
      // CREATE: A user can only create their own document.
      allow create: if isOwner(userId);
      // READ: Any authenticated user can read any profile (for leaderboards, etc.).
      // Admins are authenticated, so this covers them too.
      allow get, list: if request.auth != null;
      // UPDATE: A user can update their own profile, or an admin can update anyone's.
      allow update: if isOwner(userId) || isAdmin();
    }

    // Rules for user-specific data that admins also need to see in bulk.
    match /transactions/{docId} {
      // CREATE: A user can only create their own transaction.
      allow create: if isOwner(request.resource.data.userId);
      // READ (get, list): An admin can read any transaction. A user can only read their own.
      // For an admin's list query, `isAdmin()` is true, so the query is allowed.
      // For a user's query, `isOwner` secures the document reads.
      allow read: if isAdmin() || isOwner(resource.data.userId);
    }
    
    // Rules for admin-managed data that users can create.
    match /withdrawalRequests/{docId} {
      // CREATE: User can create their own request.
      allow create: if isOwner(request.resource.data.userId);
      // ADMINS ONLY: Only admins can read or write (update/delete) these.
      allow read, write: if isAdmin();
    }
    
    match /addFundRequests/{docId} {
      // CREATE: User can create their own request.
      allow create: if isOwner(request.resource.data.userId);
      // ADMINS ONLY: Only admins can read or write (update/delete) these.
      allow read, write: if isAdmin();
    }

    // Rules for app configuration
    match /appConfiguration/{docId} {
      // READ: Anyone can read the app configuration.
      allow read: if true;
      // WRITE: Only admins can change the configuration.
      allow write: if isAdmin();
    }
  }
}
