
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check if the user is authenticated and if their document has isAdmin: true
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Collection Rules ---

    // Users Collection: For profiles and leaderboard
    match /users/{userId} {
      // Anyone logged in can see user lists (for leaderboard) and individual profiles
      allow read: if request.auth != null;
      // A user can update their own profile, or an admin can update any profile
      allow update: if isOwner(userId) || isAdmin();
      // A user can only create their own profile document
      allow create: if isOwner(userId);
    }

    // Transactions Collection
    match /transactions/{transactionId} {
      // An admin can read any transaction.
      // A user can read their own transaction.
      // This combined rule works for both single-doc reads and list queries.
      allow read: if isAdmin() || isOwner(resource.data.userId);
      
      // A user can only create a transaction for themself.
      allow create: if isOwner(request.resource.data.userId);
    }

    // Withdrawal Requests Collection
    match /withdrawalRequests/{requestId} {
      // Only admins can read or write requests.
      allow read, write: if isAdmin();
      // A user can only create a request for themself.
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Add Fund Requests Collection
    match /addFundRequests/{requestId} {
      // Only admins can read or write requests.
      allow read, write: if isAdmin();
      // A user can only create a request for themself.
      allow create: if isOwner(request.resource.data.userId);
    }

    // App Configuration: For game settings and news
    match /appConfiguration/{docId} {
      // Any logged-in user can read the configuration.
      allow read: if request.auth != null;
      // Only admins can change the configuration.
      allow write: if isAdmin();
    }
  }
}
