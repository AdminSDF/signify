rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile photos
    match /profile_photos/{userId} {
      // Allow anyone to read profile photos (they are public by nature)
      allow read: if true;

      // Allow a user to write (create, update, delete) to their own profile photo path
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 && // Max 2MB
                      request.resource.contentType.matches('image/.*'); // Must be an image
    }
  }
}
