rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to read all files publicly for simplicity in this app.
    // In a real production app with sensitive data, you would restrict this.
    match /{allPaths=**} {
      allow read;
    }

    // Profile Photos:
    // Only the authenticated user can upload/update their own profile photo.
    // The photo must be smaller than 2MB.
    match /profile_photos/{userId} {
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 2 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }

    // Support Ticket Screenshots:
    // Any authenticated user can upload a screenshot for a support ticket.
    // The path must match the structure.
    // The file must be smaller than 5MB.
    match /support_tickets/{ticketId}/{fileName} {
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
